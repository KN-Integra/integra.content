#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo 'ğŸ—ï¸ğŸ‘· Changing Modified At metadata for changed files...'

git diff --cached --name-only --diff-filter=ACM -z -- content/ | xargs -0 perl -0777 -i -pe "s/(lastmod:).*\s/\1$(date -u +" %Y-%m-%dT%H:%M:%SZ")\n/g"

git add --all

# If everything passes... Now we can commit
echo 'âœ… Everything looks good. Creating commit... âœ…'
